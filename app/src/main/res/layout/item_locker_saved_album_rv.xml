<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/locker_saved_album_cv"
        android:layout_width="84dp"
        android:layout_height="84dp"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/locker_saved_album_info_layout">

        <ImageView
            android:id="@+id/locker_saved_album_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/locker_saved_album_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/locker_saved_album_cv">

        <TextView
            android:id="@+id/locker_saved_album_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(알 수 없음)"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lockersaved_album_artist_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(알 수 없음)"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/locker_saved_album_publish_info_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(알 수 없음)"
            android:textSize="11sp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/locker_saved_album_btn_play_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/locker_saved_album_btn_more_iv"/>

    <ImageView
        android:id="@+id/locker_saved_album_btn_more_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>