<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/album_info_music_list_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="01"
        android:textColor="@color/black"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/album_info_title_tv"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:textSize="8sp"
        android:text="TITLE"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:background="@drawable/album_info_title_tv_background"
        app:layout_constraintBottom_toBottomOf="@id/album_info_music_list_number_tv"
        app:layout_constraintStart_toEndOf="@id/album_info_music_list_number_tv"
        app:layout_constraintTop_toTopOf="@id/album_info_music_list_number_tv"/>

    <TextView
        android:id="@+id/album_info_music_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LILAC"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/album_info_title_tv"
        app:layout_constraintTop_toTopOf="@id/album_info_music_list_number_tv"/>

    <TextView
        android:id="@+id/album_info_music_list_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유(IU)"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_info_music_list_title_tv"
        app:layout_constraintStart_toStartOf="@id/album_info_title_tv"/>

    <ImageView
        android:id="@+id/album_info_music_list_play_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/btn_miniplayer_play"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/album_info_music_list_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/album_info_music_list_more_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_more"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>