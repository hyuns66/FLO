<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/music_videos_sort_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최신순 ▼"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"/>

    <LinearLayout
        android:id="@+id/music_videos_1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/music_videos_sort_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_videos_1_cv"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/music_videos_1_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iu_coin_mv"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[MV] Coin"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 (IU) | 2021.03.26"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_videos_2_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/music_videos_1_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_videos_2_cv"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/music_videos_2_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iu_lilac_mv"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[MV] 라일락 (LILAC)"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 (IU) | 2021.03.25"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_videos_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/music_videos_2_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_videos_3_cv"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/music_videos_3_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iu_lilac_teaser"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[티저] 라일락 (LILAC)"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 (IU) | 2021.03.24"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/music_videos_4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/music_videos_2_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/music_videos_4_cv"
            android:layout_width="match_parent"
            app:cardCornerRadius="10dp"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/music_videos_4_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/iu_coin_teaser"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[티저] Coin"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아이유 (IU) | 2021.03.22"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>