<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/album_info_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="50dp"
                app:contentScrim="@color/white"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:backgroundTint="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <!--앨범정보 레이아웃-->
                    <LinearLayout
                        android:id="@+id/album_info_music_info_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="50dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/album_info_main_title_tv"
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="7dp"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:gravity="center_horizontal"
                            android:text="(알수없음)"
                            android:textSize="20sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/album_info_main_artist_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:text="(알수없음)"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/album_info_main_release_date_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2021.10.02"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/album_info_main_type_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="싱글"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" | "
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/album_info_main_genre_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="발라드"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/album_info_main_album_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="15dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/album_info_music_info_layout">

                        <ImageView
                            android:id="@+id/album_info_main_album_iv"
                            android:layout_width="170dp"
                            android:layout_height="170dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_potcast_exp"/>

                    </androidx.cardview.widget.CardView>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="130dp"
                        android:adjustViewBounds="true"
                        app:layout_constraintStart_toEndOf="@id/album_info_main_album_cv"
                        android:src="@drawable/img_album_lp"
                        app:layout_constraintTop_toTopOf="@id/album_info_main_album_cv"
                        app:layout_constraintBottom_toBottomOf="@id/album_info_main_album_cv"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:menu="@menu/album_info_toolbar_menu"
                    android:background="@null"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/album_info_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabRippleColor="@null"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="#3f3fff"
            app:tabSelectedTextColor="#3f3fff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/album_info_appbar_layout">

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 수록곡 "
                android:textSize="15sp"
                android:textColor="@drawable/selector_album_info_radio_text"
                android:background="@drawable/selector_album_info_radio_button"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 상세정보 "
                android:textSize="15sp"
                android:textColor="@drawable/selector_album_info_radio_text"
                android:background="@drawable/selector_album_info_radio_button"/>

            <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 영상 "
                android:textSize="15sp"
                android:textColor="@drawable/selector_album_info_radio_text"
                android:background="@drawable/selector_album_info_radio_button"/>

        </com.google.android.material.tabs.TabLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            app:layout_constraintTop_toBottomOf="@id/album_info_tab_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
<!--        <androidx.viewpager2.widget.ViewPager2-->
<!--            android:id="@+id/album_info_tab_vp"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
