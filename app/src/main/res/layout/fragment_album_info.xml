<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/album_info_ic_back_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/btn_arrow_black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/album_info_ic_favorite_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_my_like_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/album_info_ic_more_iv"
        android:layout_margin="10dp"/>

    <ImageView
            android:id="@+id/album_info_ic_more_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/btn_player_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="15dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--앨범정보 레이아웃-->
            <LinearLayout
                android:id="@+id/album_info_music_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/album_info_main_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="(알수없음)"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/album_info_main_artist_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="(알수없음)"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/album_info_main_release_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2021.10.02"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/album_info_main_type_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="싱글"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/album_info_main_genre_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="발라드"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/album_info_main_album_iv"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:adjustViewBounds="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_potcast_exp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_info_music_info_layout" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="130dp"
                android:adjustViewBounds="true"
                app:layout_constraintStart_toEndOf="@id/album_info_main_album_iv"
                android:src="@drawable/img_album_lp"
                app:layout_constraintTop_toTopOf="@id/album_info_main_album_iv"
                app:layout_constraintBottom_toBottomOf="@id/album_info_main_album_iv"/>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/album_info_favorite_mix_sb"
                android:layout_width="150dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/album_info_main_album_iv"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="내 취향 MIX"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/lookaround_custom_btn_background"/>

            <!--커스텀 라디오버튼-->
            <RadioGroup
                android:id="@+id/album_info_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/album_info_favorite_mix_sb"
                android:checkedButton="@id/album_info_contained_music_rb">

                <RadioButton
                    android:id="@+id/album_info_contained_music_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="수록곡"
                    android:textSize="15sp"
                    android:textColor="@drawable/selector_album_info_radio_text"
                    android:background="@drawable/selector_album_info_radio_button"/>

                <RadioButton
                    android:id="@+id/album_info_more_info_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="상세정보"
                    android:textSize="15sp"
                    android:textColor="@drawable/selector_album_info_radio_text"
                    android:background="@drawable/selector_album_info_radio_button"/>

                <RadioButton
                    android:id="@+id/album_info_movie_rb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="영상"
                    android:textSize="15sp"
                    android:textColor="@drawable/selector_album_info_radio_text"
                    android:background="@drawable/selector_album_info_radio_button"/>

            </RadioGroup>

            <!--전체선택, 전체듣기 버튼 레이아웃-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/album_info_check_play_btns_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/album_info_rg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/album_info_check_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/btn_playlist_select_off" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:text="전체선택"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:gravity="center_vertical"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/album_info_play_all_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="25dp"
                        android:src="@drawable/icon_browse_arrow_right"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:text="전체듣기"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ScrollView
                android:id="@+id/album_info_music_list_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/album_info_check_play_btns_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
