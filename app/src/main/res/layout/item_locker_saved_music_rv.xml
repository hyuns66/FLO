<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/locker_saved_music_cv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="12dp">

        <ImageView
            android:id="@+id/locker_saved_music_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_exp2"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/locker_saved_music_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/locker_saved_music_cv"
        app:layout_constraintStart_toEndOf="@id/locker_saved_music_cv"
        app:layout_constraintBottom_toTopOf="@id/locker_saved_music_artist_tv"
        android:text="(알수없음)"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/locker_saved_music_artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(알수없음)"
        app:layout_constraintTop_toBottomOf="@id/locker_saved_music_title_tv"
        app:layout_constraintStart_toEndOf="@id/locker_saved_music_cv"
        android:layout_marginStart="12dp"
        app:layout_constraintBottom_toBottomOf="@id/locker_saved_music_cv"/>

    <ImageView
        android:id="@+id/locker_saved_music_btn_play_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_miniplayer_play"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/locker_saved_music_btn_more_iv"/>

    <ImageView
        android:id="@+id/locker_saved_music_btn_more_iv"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/btn_player_more"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>